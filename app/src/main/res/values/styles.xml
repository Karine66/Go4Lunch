<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Hamburger menu -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/quantum_white_100</item>
    </style>
    <!--For Styleable Toasts-->
    <style name="personalizedToast">
        <item name="stColorBackground">#FFEE58</item>
        <item name="stTextColor">#000</item>
        <item name="stIconStart">@drawable/lunch_black</item>
        <item name="stStrokeColor">@color/colorAccentDark</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="stLength">SHORT</item>
    </style>
</resources>
